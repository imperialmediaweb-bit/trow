# Throwbox AI - Environment Variables
# Copy to .env and fill in values

# ─── Database ────────────────────────────────────────────────
DB_PASSWORD=change_me_strong_password
DATABASE_URL=postgresql://throwbox:change_me@localhost:5432/throwbox

# ─── Redis ───────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT ─────────────────────────────────────────────────────
JWT_SECRET=change_me_64_char_random_string
JWT_REFRESH_SECRET=change_me_another_64_char_string

# ─── Encryption ──────────────────────────────────────────────
ENCRYPTION_KEY=change_me_32_byte_hex_key

# ─── AI Providers ────────────────────────────────────────────
AI_PROVIDER=claude
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GOOGLE_AI_KEY=xxx

# ─── CAPTCHA ─────────────────────────────────────────────────
HCAPTCHA_SITE_KEY=xxx
HCAPTCHA_SECRET=xxx

# ─── Stripe ──────────────────────────────────────────────────
STRIPE_PUBLIC_KEY=pk_xxx
STRIPE_SECRET_KEY=sk_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ─── S3 / Object Storage ────────────────────────────────────
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=throwbox-attachments
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ─── SMTP / Mail ─────────────────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=25
MAIL_DOMAINS=throwbox.net,tmpmail.dev

# ─── App ─────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:5173
LOG_LEVEL=debug
APP_URL=https://throwbox.net
API_URL=https://api.throwbox.net
