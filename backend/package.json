{
  "name": "@throwbox/api",
  "version": "0.1.0",
  "description": "Throwbox AI - Temporary Email & Privacy Platform API",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:seed": "tsx src/database/seed.ts",
    "worker:mail": "tsx src/workers/mail.worker.ts",
    "worker:ai": "tsx src/workers/ai.worker.ts",
    "worker:cleanup": "tsx src/workers/cleanup.worker.ts",
    "worker:smtp": "tsx src/workers/smtp.server.ts"
